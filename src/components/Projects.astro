---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Swift from "./icons/Swift.astro"
import Kotlin from "./icons/Kotlin.astro"
import Firebase from "./icons/Firebase.astro"
import OpenAI from "./icons/OpenAI.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  SWIFT: {
    name: "Swift",
    class: "bg-[#003159] text-white",
    icon: Swift,
  },
  KOTLIN: {
    name: "Kotlin",
    class: "bg-[#003159] text-white",
    icon: Kotlin,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#003159] text-white",
    icon: Firebase,
  },
  OPENAI: {
    name: "OpenAI API",
    class: "bg-[#003159] text-white",
    icon: OpenAI,
  },
}
const PROJECTS = [
  {
    title: "Lecthur - Visual micro-learning mobile app",
    description:
      "Lecthur is a visual micro-learning platform designed to make lifelong learning engaging and accessible for Spanish-speaking audiences. I developed Lecthur to deliver daily bite-sized lessons—under 5 minutes—on topics such as science, politics, and economics. The platform includes interactive quizzes to reinforce knowledge retention and promote active learning.",
    link: "https://apps.apple.com/us/app/lecthur/id6468351147?platform=iphone",
    image: "https://pub-55c9c0d2a2e644428c0abb107776e8ae.r2.dev/lecthur-project.jpeg",
    tags: [TAGS.SWIFT, TAGS.KOTLIN, TAGS.FIREBASE],
  },
  {
    title: "Spendo - AI Expense Tracker",
    description:
      "Spendo is a conversational finance app that empowers users to manage their money through daily interactions with an AI assistant. I built Spendo to help users track expenses, monitor budgets, and stay motivated with gamified savings challenges. The app combines real-time financial data with personalized AI-driven insights to encourage better money habits.",
    link: "https://apps.apple.com/us/app/spendo-budget-saving-ai/id6744425096",
    image: "https://pub-55c9c0d2a2e644428c0abb107776e8ae.r2.dev/spendo-project.jpeg",
    tags: [TAGS.SWIFT, TAGS.OPENAI],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Screenshot of the project" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



